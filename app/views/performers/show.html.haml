#content
  #artist-banner{style: "background-image: url(#{image_path('feat-card-1.jpg')}"}
    .mui-container
      .mui-row
        .mui-col-md-12
          .artist-picture{style: "background-image: url(#{image_path('feat-card-1.jpg')}"}
          %h1= @performer.name
          .location Stockholm | Sweden
          .genre Rock
          .follow-request
            %a{href: "#"}> + Follow
              | 
            %a{href: "#"} + Request this artist
  #artist-details
    .mui-container
      .mui-row
        .mui-col-md-12
          %h3
            %a.active{href: "#"} Overview
            %a{href: "#"} Shows
            - if @performer.active? && current_user.admin?
              .form-group
                = link_to 'Archive', performer_path(@performer, event: 'archive'), method: :put, data: { confirm: 'Are you sure?' }, class: 'form-submit'
      .mui-row.details-spotify
        .mui-col-md-12.mui-col-lg-8
          %h2= @performer.name
          %p= @performer.description 
          %ul.artist-social-links
            %li
              %a{href: "#"}
                = icon('fab', 'twitter')
                = @performer.twitter
            %li
              %a{href: "#"}
                = icon('fab', 'facebook')
                = @performer.facebook
            %li
              %a{href: "#"}
                = icon('fab', 'instagram')
                = @performer.instagram
          .youtube-container
            %iframe{allow: "autoplay; encrypted-media", allowfullscreen: "", frameborder: "0", height: "315", src: "https://www.youtube.com/embed/-1uGdOHMXiI?rel=0&showinfo=0", width: "560"}
        .mui-col-md-12.mui-col-lg-4.spotify-container
          %iframe{allow: "encrypted-media", allowtransparency: "true", frameborder: "0", height: "380", src: "https://open.spotify.com/embed/user/ozze/playlist/3dxUfHVBNwwyNbsaTMYmPb", width: "300"}
  .mui-container.artist-campaigns-container
