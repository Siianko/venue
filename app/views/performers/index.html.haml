#content
  .mui-container
    #search-artists-results.mui-row.item-listing.artists-list
      .mui-col-lg-12
        %h1.search-heading Search Artist
      %form.mui-form
        .mui-col-lg-12
          .search-row
            .mui-textfield
              %input.form-control{placeholder: "Search for Artist Name, Genre or City", type: "text"}/
            .form-submit
              %svg{style: "enable-background:new 0 0 24 24;", version: "1.1", viewbox: "0 0 24 24", x: "0px", "xml:space" => "preserve", xmlns: "http://www.w3.org/2000/svg", "xmlns:xlink" => "http://www.w3.org/1999/xlink", y: "0px"}
                %polygon{fill: "rgb(240,215,93)", points: "24,12 13.5,1.5 11.1,3.8 17.9,10.6 0,10.6 0,13.9 17.4,13.9 11.1,20.2 13.5,22.5 21.7,14.3 21.7,14.3"}
      .mui-col-md-3.has-artists-items
        - @performers.each do |performer|
          %a.artist-item{href: performer_path(performer)}
            %span.thumb{style: "background-image: url(#{image_path('feat-card-3.jpg')})"}
            %span.title
              = link_to performer.name, performer_path(performer)
